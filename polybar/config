[bar/mybar]

;------------;
; DIMENSIONS ;
;------------;

width = 100%
height = 22
offset-y = 0
offset-x = 0

border-top-size = 5
border-bottom-size = 5

;----------;
; LOCATION ;
;----------;

bottom = false
monitor = eDP1
override-redirect = false


;-------;
; FONTS ;
;-------;

font-0 = "xos4 Terminus:style=Bold:pixelsize=18;2"
font-1 = "Font Awesome 5 Free:style=Regular:pixelsize=13;2"
font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=13;2"
font-3 = "Font Awesome 5 Brands:pixelsize=13;2"

;--------;
; COLORS ;
;--------;

background = 0 
foreground = #c5a9f9
border-color = 0

;---------------;
; MISCELLANEOUS ;
;---------------;

fixed-center = true
padding-left = 2 
padding-right = 2
module-margin = 1.5

modules-left = battery-combined-udev pulseaudio memory cpu 
modules-center = i3
modules-right = spotify wlan date time 

;---------;
; MODULES ;
;---------;

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
enable-scroll = false


label-focused-foreground = #8E47FF
label-focused-underline = #fba922
label-unfocused-foreground = #afafaf
label-urgent-foreground = #ff0000


label-focused-padding = 1
label-unfocused-padding = 1

[module/time]
type = internal/date

interval = 1.0

date =  %H:%M

[module/date]
type = internal/date
date =  %A, %e %B
label = %date%

[module/pulseaudio]
type = internal/pulseaudio

sink = alsa_output.pci-0000_00_1f.3.analog-stereo

format-volume = <ramp-volume> <label-volume>
format-muted = 

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/backlight]
type = internal/xbacklight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
output=eDP1

format = <ramp> <label>

label = %percentage%%

ramp-0 = 
ramp-1 = 
ramp-2 = 

[module/wlan]
type = internal/network

interface = wlp4s0 

interval = 5

label-connected =  %essid%
label-disconnected =  Not Connected

[module/cpu]
type = internal/cpu
label =  %percentage%%


[module/memory]
type = internal/memory
label =  %gb_used%

[module/network]
type = internal/network
interface = wlp4s0
label-connected =  %downspeed% |  %upspeed%

[bar/float]

inherit = bar/mybar

background = #ffffff

tray-position = center

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 0

; Full path of temperature sysfs path
; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/virtual/thermal/thermal_zone0/hwmon0/temp1_input

; Threshold temperature to display warning label (in degrees celsius)
; Default: 80
warn-temperature = 80

; Whether or not to show units next to the temperature tokens (°C, °F)
; Default: true
units = false

; Available tags:
;   <label> (default)
;   <ramp>
format = <label>

; Available tokens:
;   %temperature% (deprecated)
;   %temperature-c%   (default, temperature in °C)
;   %temperature-f%   (temperature in °F)
label =  %temperature-c%°C


[module/battery-combined-udev]
type = custom/script
exec = /home/incenger/.config/polybar/battery-combined-udev.sh
tail = true

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python /home/incenger/.config/polybar/spotify_status.py  -f '{play_pause} {song} - {artist}' -p "," --playpause-font="Font Awesome 5 Free:style=Regular:pixelsize=12;3" --font="Inconsolata:style=Regular:pixelsize=12"
format-underline = #1db954
